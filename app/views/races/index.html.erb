<h1>Listing races</h1>

<table>
  <tr>
    <th>Race on</th>
    <th>Name</th>
    <th>Location</th>
    <th>Results</th>
  </tr>

<% @races.each do |race| %>
  <tr>
    <td><%=h race.race_on %></td>
    <td><%=h race.name %></td>
    <td><%=h race.location %></td>
    <td><%=h race.results.size %></td>
    <td><%= link_to 'Show', race %></td>
    <td><%= link_to 'Edit', edit_race_path(race) %></td>
    <td><%= link_to 'Destroy', race, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

