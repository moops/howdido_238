<p>
  <b>First name:</b>
  <%=h @athlete.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%=h @athlete.last_name %>
</p>

<p>
  <b>City:</b>
  <%=h @athlete.city %>
</p>


<%= link_to 'Edit', edit_athlete_path(@athlete) %> |
<%= link_to 'Back', athletes_path %>

<p>
<b>races:</b>
<ul>
<% for race in @athlete.races %>
    <li><%=h race.name %>
      <ul>
      <% for result in race.results %>
        <li>
          <% if result.athlete_id == @athlete.id %>
            <b><%=h result.overall_place %> | <%=h result.gun_time %></b>
          <% else %>
            <%=h result.overall_place %> | <%=h result.gun_time %>
          <% end %>
        </li>
      <% end %>
      </ul>
    </li>
<% end %>
</ul>
</p>

<table class="vis">
  <caption>2009 Employee Sales by Department</caption>
  <thead>
    <tr>
      <td></td>
      <th scope="col">food</th>
      <th scope="col">auto</th>
      <th scope="col">household</th>
      <th scope="col">furniture</th>
      <th scope="col">kitchen</th>
      <th scope="col">bath</th>
    </tr>
  </thead>
  <tbody>
    <% for race in @athlete.races %>
    <tr>
      <th scope="row"><%=h race.name %></th>
      <td>190</td>
      <td>160</td>
      <td>40</td>
      <td>120</td>
      <td>30</td>
      <td>70</td>
    </tr>
    <% end %>
  </tbody>
</table>